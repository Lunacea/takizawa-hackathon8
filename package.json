{
  "name": "web-template",
  "version": "0.1.0",
  "description": "Modern web app template with Bun, TypeScript, (React/Vue/Svelte-ready), Tailwind CSS, Prisma, Docker, Terraform, GitHub Actions, Biome, Husky, commitlint, Renovate, semantic-release.",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\"",
    "dev:frontend": "cd src/frontend && bun run dev",
    "dev:backend": "bun run server",
    "build": "bun run build:frontend && bun run build:backend",
    "build:frontend": "cd src/frontend && bun run build",
    "build:backend": "echo 'Backend build completed'",
    "start": "concurrently \"bun run start:frontend\" \"bun run start:backend\"",
    "start:frontend": "cd src/frontend && bun run start",
    "start:backend": "bun run server",
    "server": "bun src/backend/server.ts",
    "lint": "bun x @biomejs/biome ci .",
    "lint:fix": "bun x @biomejs/biome check --apply .",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "db:generate": "bun x prisma generate",
    "db:migrate": "bun x prisma migrate dev",
    "storybook": "echo 'UI未選定のため無効' && exit 0",
    "storybook:build": "echo 'UI未選定のため無効' && exit 0",
    "md:lint": "bun x markdownlint . --ignore node_modules --ignore src/frontend",
    "md:lint:fix": "bun x markdownlint . --ignore node_modules --ignore src/frontend --fix",
    "test:watch": "bun test --watch",
    "release": "bun x semantic-release",
    "fix": "bun tools/fix.ts",
    "branch:new": "bun tools/branch.ts",
    "issue:new": "bun tools/issue.ts",
    "pr:new": "bun tools/pr.ts",
    "gh:flow": "bun tools/gh-flow.ts",
    "commit:quick": "bun tools/quick-commit.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^20.0.0",
    "markdownlint-cli": "^0.41.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "bun-types": "^1.2.22",
    "concurrently": "^9.2.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "prisma": "^6.16.2",
    "semantic-release": "^24.2.9",
    "markdownlint": "^0.38.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2"
  },
  "engines": {
    "bun": ">=1.1.0"
  }
}
