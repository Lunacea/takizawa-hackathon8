{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "vcs": { "enabled": true, "clientKind": "git" },
  "files": {
    "ignoreUnknown": false,
    "maxSize": 1048576,
    "includes": [
      "src/backend/**/*.{js,jsx,ts,tsx,json}",
      "src/lib/**/*.{js,jsx,ts,tsx,json}",
      "tools/**/*.{js,ts}",
      "*.{js,ts,json}",
      "prisma/**/*.prisma",
      "!src/frontend"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useConst": "warn"
      },
      "correctness": {
        "noUnusedVariables": "warn"
      }
    }
  }
}
