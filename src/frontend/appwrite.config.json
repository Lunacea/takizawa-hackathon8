{
    "endpoint": "https://sfo.cloud.appwrite.io/v1",
    "projectId": "68d7aca8003554483772",
    "projectName": "Our Knot",
    "databases": [
        {
            "$id": "our-knot-db",
            "name": "OurKnotDB",
            "enabled": true
        }
    ],
    "collections": [
        {
            "$id": "profiles",
            "databaseId": "our-knot-db",
            "name": "Profiles",
            "enabled": true,
            "$permissions": [
                "read(\"any\")",
                "create(\"users\")"
            ],
            "documentSecurity": true,
            "attributes": [
                { "key": "username", "type": "string", "size": 100, "required": true, "array": false, "encrypt": false },
                { "key": "avatar_url", "type": "string", "size": 2048, "required": false, "array": false, "encrypt": false },
                { "key": "bio", "type": "string", "size": 1000, "required": false, "array": false, "encrypt": false },
                {
                    "key": "role",
                    "type": "string",
                    "size": 50,
                    "required": true,
                    "elements": ["REQUESTER", "PARTICIPANT"],
                    "array": false,
                    "encrypt": false
                }
            ],
            "indexes": []
        },
        {
            "$id": "comments",
            "databaseId": "our-knot-db",
            "name": "Comments",
            "enabled": true,
            "$permissions": [
                "read(\"any\")",
                "create(\"users\")"
            ],
            "documentSecurity": true,
            "attributes": [
                { "key": "projectId", "type": "string", "size": 255, "required": true, "array": false },
                { "key": "userId", "type": "string", "size": 255, "required": true, "array": false },
                { "key": "content", "type": "string", "size": 10000, "required": true, "array": false },
                { "key": "type", "type": "string", "size": 50, "required": true, "elements": ["comment", "question"], "array": false },
                { "key": "parentId", "type": "string", "size": 255, "required": false, "array": false }
            ],
            "indexes": [
                { "key": "idx_projectId", "type": "key", "attributes": ["projectId"] },
                { "key": "idx_parentId", "type": "key", "attributes": ["parentId"] }
            ]
        },
        {
            "$id": "projects",
            "databaseId": "our-knot-db",
            "name": "Projects",
            "enabled": true,
            "$permissions": [
                "read(\"any\")",
                "create(\"users\")"
            ],
            "documentSecurity": true,
            "attributes": [
                { "key": "requesterId", "type": "string", "size": 255, "required": true, "array": false, "encrypt": false },
                { "key": "title", "type": "string", "size": 255, "required": true, "array": false, "encrypt": false },
                { "key": "description", "type": "string", "size": 10000, "required": true, "array": false, "encrypt": false },
                {
                    "key": "status",
                    "type": "string",
                    "size": 50,
                    "required": true,
                    "elements": ["DRAFT", "OPEN", "CLOSED", "COMPLETED"],
                    "array": false,
                    "encrypt": false
                },
                { "key": "participation_reward", "type": "string", "size": 255, "required": true, "array": false, "encrypt": false },
                { "key": "bonus_reward", "type": "string", "size": 255, "required": false, "array": false, "encrypt": false },
                { "key": "bonus_condition", "type": "string", "size": 1000, "required": false, "array": false, "encrypt": false },
                { "key": "category", "type": "string", "size": 100, "required": false, "array": false, "encrypt": false },
                { "key": "image_url", "type": "string", "size": 2048, "required": false, "array": false, "encrypt": false },
                { "key": "deadline", "type": "string", "size": 50, "required": false, "array": false, "encrypt": false },
                { "key": "headcount", "type": "integer", "required": false, "array": false, "min": -9223372036854775808, "max": 9223372036854775807 },
                { "key": "organizer", "type": "string", "size": 255, "required": false, "array": false, "encrypt": false },
                { "key": "event_date", "type": "string", "size": 100, "required": false, "array": false, "encrypt": false },
                { "key": "place", "type": "string", "size": 255, "required": false, "array": false, "encrypt": false },
                { "key": "genre", "type": "string", "size": 100, "required": false, "array": false, "encrypt": false },
                { "key": "lat", "type": "double", "required": false, "array": false },
                { "key": "lng", "type": "double", "required": false, "array": false }
            ],
            "indexes": []
        },
        {
            "$id": "project_participants",
            "databaseId": "our-knot-db",
            "name": "ProjectParticipants",
            "enabled": true,
            "$permissions": [
                "read(\"users\")",
                "create(\"users\")"
            ],
            "documentSecurity": true,
            "attributes": [
                { "key": "projectId", "type": "string", "size": 255, "required": true, "array": false },
                { "key": "userId", "type": "string", "size": 255, "required": true, "array": false }
            ],
            "indexes": [
                {
                    "key": "idx_project_user_unique",
                    "type": "unique",
                    "attributes": ["projectId", "userId"]
                }
            ]
        },
        {
            "$id": "submissions",
            "databaseId": "our-knot-db",
            "name": "Submissions",
            "enabled": true,
            "$permissions": [
                "read(\"users\")",
                "create(\"users\")"
            ],
            "documentSecurity": true,
            "attributes": [
                { "key": "userId", "type": "string", "size": 255, "required": true, "array": false },
                { "key": "content", "type": "string", "size": 10000, "required": true, "array": false },
                { "key": "is_adopted", "type": "boolean", "required": true, "array": false }
            ],
            "indexes": []
        },
        {
            "$id": "point_transactions",
            "databaseId": "our-knot-db",
            "name": "PointTransactions",
            "enabled": true,
            "$permissions": [],
            "documentSecurity": true,
            "attributes": [
                { "key": "userId", "type": "string", "size": 255, "required": true, "array": false },
                { "key": "amount", "type": "integer", "required": true, "array": false },
                { "key": "description", "type": "string", "size": 255, "required": true, "array": false }
            ],
            "indexes": []
        }
    ],
    "functions": [],
    "buckets": [
        {
            "$id": "images",
            "name": "Images",
            "fileSecurity": true,
            "permissions": [
                "read(\"any\")",
                "create(\"users\")"
            ],
            "encryption": true,
            "antivirus": false,
            "maximumFileSize": 10485760,
            "allowedFileExtensions": ["jpg", "jpeg", "png", "webp"]
        }
    ]
}